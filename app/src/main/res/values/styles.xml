<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="color_elevation_overlay_2dp">@color/color_black_900_alpha_7</color>
    <color name="color_divider">@color/color_elevation_overlay_2dp</color>
    <color name="default_code_error_highlight_color">@color/color_error</color>
    <color name="default_code_brackets_highlight_color">#AAFFD77A</color>
    
    <!--Customised Button-->
    <style name="Widget.AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator" >@null</item>
        <item name="elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>